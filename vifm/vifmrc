set undolevels=10
set history=100

set noiec  
"Use KiB instead of KB

set ignorecase 
" ignore case in search patterns

set smartcase 
" if it contains at leaset one uppercase , do not ignore case

set nohlsearch 
" do not highlight the search result file , but still highlight the mathed characters

set incsearch 
" Use increment searching (search while typing)

set statusline="  %t%= %A %10u:%-7g %15s %20d  "custom statusline

nnoremap S :shell<cr>
nnoremap s :sort<cr>
nnoremap q :view<cr>
nnoremap Q :view<cr>gv
nnoremap r :rename<cr>

" two-panel file managers mappings
nnoremap <f3> :!less %f<cr>
nnoremap <f4> :edit<cr>
nnoremap <f5> :copy<cr>
nnoremap <f6> :move<cr>
nnoremap <f7> :mkdir<space>

nnoremap x :delete

" use = to force sync path
nnoremap = :cd %d %d<cr>

" yf to copy current file path to system clipboard (for macOS)
nnoremap yf :!echo -n %c:p | pbcopy %i<cr>:echo expand('%"c:p') "is yanked to clipboard"<cr>
nnoremap Y :!echo -n %c:p | pbcopy %i<cr>:echo expand('%"c:p') "is yanked to clipboard"<cr>

" yf to copy current path to system clipboard (for macOS)
nnoremap yd :!echo -n %d | pbcopy %i<cr>:echo expand('%"d') "is yanked to clipboard"<cr>

" yf to copy current filename without path to system clipboard (for macOS)
nnoremap yn :!echo -n %c | pbcopy %i<cr>:echo expand('%"c') "is yanked to clipboard"<cr>

nnoremap <f1> :!emacsclient %f&<cr>
nnoremap O :!open ./<cr>
nnoremap o :!open %f&<cr>

" VimDesktop style favs
nmap d '

filetype *.mp4,*.avi,*.mkv open
filetype *.jpg,*.png open
filetype *.doc,*.docx,*.xls,*.xlsx open
filetype *.pdf open
filetype *.dmg open

fileviewer *.jpg,*.png 
	\ imgt %px %py %pw %ph %c
	\ %pc
	\ imgc %px %py %pw %ph

filetype * vi

" file types
" set classify='D :dir:/,E :exe:'

